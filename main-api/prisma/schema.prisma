generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String    @unique
  email    String    @unique
  password String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  roles     Roles[]

  @@map("users")
}

model News {
  id       Int      @id @default(autoincrement())
  title    String
  content  String
  image    String?
  date     DateTime @default(now())
  category String
}

// ENUMS

enum Roles {
  ROOT
  ADMIN
  MODER
  USER
}
